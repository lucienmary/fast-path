{
    "manifest_version": 3,
    "name": "Fast Path",
    "version": "0.1.0",
    "action": {
        "default_icon": {
            "16": "/icon16.png",
            "38": "/icon38.png",
            "48": "/icon48.png",
            "128": "/icon128.png"
        },
        "default_title": "Fast Path - Use pre-registered path",
        "default_popup": "popup.html"
    },
    "description": "Use pre-registered path to navigate faster on a website.",
    "author": "Lucien MARY",
    "icons": {
        "16": "/icon16.png",
        "38": "/icon38.png",
        "48": "/icon48.png",
        "128": "/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "tabs"],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+E",
                "mac": "Command+Shift+E",
                "chromeos": "Ctrl+Shift+E",
                "linux": "Ctrl+Shift+E"
            },
            "description" : "Start the extension"
        },
        "go-to-the-path": {
            "suggested_key": {
                "windows": "Ctrl+E",
                "mac": "Command+E",
                "chromeos": "Ctrl+E",
                "linux": "Ctrl+E"
            },
            "description" : "Go to the path"
        },
        "new-tab": {
            "suggested_key": {
                "windows": "Ctrl+Shift+X",
                "mac": "Command+Shift+X",
                "chromeos": "Ctrl+Shift+X",
                "linux": "Ctrl+Shift+X"
            },
            "description" : "Open in new tab"
        }
    },
    "web_accessible_resources": [
        {
          "resources": [ "options.html" ],
          "matches": ["<all_urls>"]
        }
    ]
}